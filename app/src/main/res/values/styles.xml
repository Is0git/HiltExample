<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityStyle" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryActivity</item>
        <item name="colorAccent">@color/colorAccentActivity</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkActivity</item>
    </style>

</resources>
